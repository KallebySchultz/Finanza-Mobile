<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/rounded_white"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alterar Senha"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/primaryDarkBlue"
        android:layout_marginBottom="20dp" />

    <!-- Campo Senha Atual -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_senha_atual"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:hint="Senha atual"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/primaryDarkBlue"
            android:textColorHint="@color/darkGray" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo Nova Senha -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="12dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_nova_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:hint="Nova senha"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/primaryDarkBlue"
            android:textColorHint="@color/darkGray" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Campo Confirmar Nova Senha -->
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/input_confirmar_senha"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_bg"
            android:hint="Confirmar nova senha"
            android:inputType="textPassword"
            android:padding="16dp"
            android:textColor="@color/primaryDarkBlue"
            android:textColorHint="@color/darkGray" />
    </com.google.android.material.textfield.TextInputLayout>

    <!-- Texto de orientação -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="A senha deve ter pelo menos 6 caracteres"
        android:textSize="12sp"
        android:textColor="@color/darkGray"
        android:layout_marginBottom="20dp"
        android:textAlignment="center" />

    <!-- Botão Alterar Senha -->
    <Button
        android:id="@+id/btn_alterar_senha_confirmar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Alterar Senha"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="@drawable/button_blue"
        android:layout_marginBottom="8dp"
        android:elevation="2dp" />

    <!-- Botão Cancelar -->
    <Button
        android:id="@+id/btn_cancelar_senha"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Cancelar"
        android:textColor="@color/primaryDarkBlue"
        android:textStyle="bold"
        android:textSize="14sp"
        android:background="@drawable/button_gray"
        android:elevation="1dp" />

</LinearLayout>